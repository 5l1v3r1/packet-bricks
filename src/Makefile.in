#---------------------------------------------------------------------#
SRCS := $(shell ls *.c)

_OBJ := $(SRCS:%.c=%.o)
OBJ := $(patsubst %,$(OBJDIR)/%,$(_OBJ))

$(OBJDIR)/%.o: %.c
	$(MSG) "   CC $<"
	$(HIDE) $(CC) -c -o $@ $< $(CFLAGS) $(INCLUDE) $(NETMAP_INCLUDE)

all: $(OBJ)
	cd $(OSARCH) && $(MAKE)
	cd bricks && $(MAKE)

.PHONY: clean

clean:
	cd $(OSARCH) && $(MAKE) clean
	cd bricks && $(MAKE) clean
	$(RM) -rf *~
	$(RM) -rf $(OBJDIR)

distclean:
	cd $(OSARCH) && $(MAKE) distclean
	cd bricks && $(MAKE) distclean
	$(RM) -rf Makefile
#---------------------------------------------------------------------#
